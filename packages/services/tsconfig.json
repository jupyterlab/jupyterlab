{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "lib": ["dom", "es5", "es2015.collection", "es2015.promise"],
    "types": ["text-encoding"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib"
  },
  "include": ["src/*"],
  "exclude": ["src/typedoc.d.ts"]
}
